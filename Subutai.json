{
  "name": "Drupal",
  "description": "Subutai Blueprint for Drupal Installation",
  "version": "1.0.0",
  "author": "https://github.com/crioto",
  "containers": [ {
      "hostname": "${webContainerName}",
      "template": "debian-stretch",
      "peer-criteria": "HTTP-GROUP",
      "size": "SMALL",
      "port-mapping": [
        {
          "protocol": "http",
          "domain": "drupal.envs.subutai.cloud",
          "internal-port": "80",
          "external-port": "80"
        }
      ]
    }
  ],
  "ansible-configuration": {
    "source-url": "https://github.com/crioto/drupal-subutai/archive/master.zip",
    "ansible-playbook": "playbook.json",
    "groups": [
        {
            "name": "drupal",
            "hostnames": [
                "${webContainerName}"
            ]
        }
    ]
  },
  "user-variables": {
    "envName": {
        "description": "Enter name of the environment",
        "type": "string",
        "default": "domain",
        "validation": "[a-zA-Z0-9]+"
    },
    "webContainerName": {
        "description": "Enter the container's hostname",
        "type": "string",
        "default": "domain",
        "validation": "[a-zA-Z0-9]+"
    }
  },
  "peer-criteria": [ 
    {
      "name": "HTTP-GROUP",
      "max-price": "25"
    }
  ]
}
